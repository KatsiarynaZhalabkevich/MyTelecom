<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd
                      http://xmlns.jcp.org/xml/ns/javaee "
         version="4.0">
    <display-name>My Telecom Web Application</display-name>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.epam.zhalabkevich.my_telecom.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>auth</servlet-name>
        <jsp-file>/WEB-INF/jsp/auth_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/users/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin_page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/users/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>users</servlet-name>
        <jsp-file>/WEB-INF/jsp/show_users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>edit</servlet-name>
        <jsp-file>/WEB-INF/jsp/edit_profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/users/user/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tariff</servlet-name>
        <jsp-file>/WEB-INF/jsp/tariff_admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>tariff</servlet-name>
        <url-pattern>/admin/tariffs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>statistic</servlet-name>
        <jsp-file>/WEB-INF/jsp/statistic_admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>statistic</servlet-name>
        <url-pattern>/users/admin/statistic</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>user_tariff</servlet-name>
        <jsp-file>/WEB-INF/jsp/show_users_tariffs.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>user_tariff</servlet-name>
        <url-pattern>/users/user/tariffs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/page/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <jsp-file>/page/registr.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/users/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tariffs_index</servlet-name>
        <jsp-file>/page/tarif.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>tariffs_index</servlet-name>
        <url-pattern>/tariffs</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>customtag</servlet-name>
        <jsp-file>/page/customtag.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customtag</servlet-name>
        <url-pattern>/customtag</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>header</servlet-name>
        <jsp-file>/import/header.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>header</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>footer</servlet-name>
        <jsp-file>/import/footer.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>footer</servlet-name>
        <url-pattern>/footer</url-pattern>
    </servlet-mapping>


</web-app>
